FROM nginx:alpine

# Copy Laravel authapi public assets
COPY ./authapi/public /var/www/html/authapi/public
# Copy Laravel appapi public assets
COPY ./appapi/public /var/www/html/appapi/public

# Copy custom NGINX config
COPY ./nginx/nginx-compose.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]